<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/google_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:contentDescription="Google Image"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/google_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google_photo"
                android:layout_margin="5dp"
                android:text="Title : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/google_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google_title"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:text="OverView : " />

            <Button
                android:id="@+id/button_webView"
                android:layout_marginVertical="10dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google_overview"
                android:background="@drawable/button_press"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="View in Browser"
                android:paddingHorizontal="15dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>